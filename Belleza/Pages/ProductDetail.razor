@page "/productdetail"
@page "/productdetail/{id}"


@if (string.IsNullOrEmpty(id))
{
    <PageTitle>Crear nuevo producto</PageTitle>
    <h3>Crear nuevo producto</h3>
}
else
{
    <PageTitle>Administrar producto</PageTitle>
    <h3>Administrar producto</h3>
}
<div class="row">
    <EditForm Model="@product" OnValidSubmit="@HandleValidRequest" OnInvalidSubmit="@HandleFailedRequest">
        <div class="form-group">
            <label class="col-md-3"> Nombre</label>
            <InputText class="col-md-8 form-control" @bind-Value="@product.Name"></InputText>
        </div>
        <div class="form-group">
            <label class="col-md-3"> Descripcion</label>
            <InputText class="col-md-8 form-control" @bind-Value="@product.Description"></InputText>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-warning">Guardar Producto</button>
            <a @onclick="@GoToProducts" class="btn btn-primary">Regresar</a>
            @if (!string.IsNullOrEmpty(id))
            {
                <a @onclick="@DeleteProduct" class="btn btn-danger">Eliminar Producto</a>
            }
        </div>
        <br />
        <p style="color:red">@Message</p>
    </EditForm>

</div>
